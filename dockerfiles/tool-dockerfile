FROM ubuntu:20.04

# for latex
ENV DEBIAN_FRONTEND=noninteractive

# no python byte code
ENV PYTHONDONTWRITEBYTECODE 1

RUN apt-get update -q \
    && apt-get install -qy \
        # install python \
        python3-pip python3-dev \
        # install go \
        golang \
        # install rust \
        rustc cargo \
        # nodejs \
        nodejs npm \
        # latex \
        texlive-full \
        # other tools \
        gnuplot make \
    && apt-get clean && \
    && ln -sf /usr/bin/python3 /usr/bin/python \
    && ln -sf /usr/bin/pip3 /usr/bin/pip \
    && rm -rf /var/lib/apt/lists/*

